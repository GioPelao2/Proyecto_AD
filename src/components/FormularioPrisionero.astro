<form id="nuevoPrisioneroForm" class="hidden" action="#" method="post">
  <label for="nombre">Nombre:</label>
  <input type="text" id="nimbre" name="nombre" required>
  <label for="edad">Edad:</label>
  <input type="number" id="edad" name="edad" required>
  <label for="crimen">Crimen:</label>
  <input type="text" id="crimen" name="crimen" required>
  <label for="condena">Condena:</label>
  <input type="text" id="condena" name="condena" required>
  <button type="submit">Guardar</button>
</form>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const addButton = document.getElementById('add-prisoner-btn');
    const form = document.getElementById('nuevoPrisioneroForm');

    if (addButton && form) {
        addButton.addEventListener('click', () => {
            form.classList.toggle('hidden');
        });
    } else {
        console.error('No se encontraron los elementos');
    }
});
  
</script>