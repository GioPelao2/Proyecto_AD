---
const { name, age = null, detail, extraDetail } = Astro.props;
---

<div class="card bg-gray-800 p-4 rounded-lg shadow-md text-white hover:bg-gray-700 transition">
  <h2 class="text-xl font-semibold">{name}</h2>
  {age && <p>Edad: {age}</p>}
  <p>{detail}</p>
  <p>{extraDetail}</p>
  <div class="flex justify-end space-x-4 mt-4">
    <button class="text-white bg-lime-600 px-3 py-1 rounded-md hover:bg-lime-500 transition">Editar</button>
    <button class="text-white bg-red-600 px-3 py-1 rounded-md hover:bg-red-500 transition">Eliminar</button>
  </div>
</div>

<style>
.card {
  transition: transform 0.2s;
}
.card:hover {
  transform: scale(1.02);
}
</style>

