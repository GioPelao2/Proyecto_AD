<form id="formulario-prisionero" class="hidden" action="#" method="post">
  <label for="nombre">Nombre:</label>
  <input type="text" id="nombre" name="nombre" required>

  <label for="apellidos">Apellidos:</label>
  <input type="text" id="apellidos" name="apellidos" required>

  <label for="sexo">Sexo:</label>
  <input type="text" id="sexo" name="sexo" required>

  <label for="edad">Edad:</label>
  <input type="number" id="edad" name="edad" required>

  <label for="conducta">Conducta:</label>
  <input type="text" id="conducta" name="conducta" required>

  <label for="crimen">Crimen:</label>
  <input type="text" id="crimen" name="crimen" required>

  <label for="condena">Condena:</label>
  <input type="text" id="condena" name="condena" required>

  <label for="prision">Prision:</label>
  <input type="text" name="prision" id="prision">

  <button type="submit">Guardar</button>
</form>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const addButton = document.getElementById('add-btn');
    const form = document.getElementById('formulario-prisionero');

    if (addButton && form) {
        addButton.addEventListener('click', () => {
            form.classList.toggle('hidden');
        });
    } else {
        console.error('No se encontraron los elementos');
    }
});
</script>

<style>
  /* Ocultar el formulario por defecto */
  .hidden {
    display: none;
  }

  /* Estilo del formulario */
  #formulario-prisionero {
    max-width: 500px;
    margin: 2rem auto;
    padding: 2rem;
    border-radius: 10px;
    background-color: #f9f9f9;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    font-family: Arial, sans-serif;
  }

  /* Estilo de las etiquetas */
  #formulario-prisionero label {
    display: block;
    font-weight: bold;
    margin-bottom: 0.5rem;
    color: #2c3e50;
  }

  /* Estilo de los inputs */
  #formulario-prisionero input {
    width: 100%;
    padding: 0.5rem;
    margin-bottom: 1rem;
    border: 1px solid #ccc;
    border-radius: 5px;
    font-size: 1rem;
    box-sizing: border-box;
  }

  /* Input focus */
  #formulario-prisionero input:focus {
    border-color: #6ab04c;
    outline: none;
    box-shadow: 0 0 4px rgba(106, 176, 76, 0.5);
  }

  /* Estilo del botón */
  #formulario-prisionero button {
    display: block;
    width: 100%;
    padding: 0.75rem;
    background-color: #6ab04c;
    color: #fff;
    font-weight: bold;
    border: none;
    border-radius: 5px;
    font-size: 1rem;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  /* Hover en el botón */
  #formulario-prisionero button:hover {
    background-color: #4caf50;
  }

  /* Responsive */
  @media (max-width: 600px) {
    #formulario-prisionero {
      padding: 1.5rem;
    }
  }
</style>
